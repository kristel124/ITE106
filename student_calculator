		getData.nextLine();
		
		String[] students_names = new String[num_student];
		double[] student_score = new double[num_student];
		
		for(int i=0; i<num_student; i++) {
			System.out.print("Enter name: ");
			String name = getData.nextLine();
			System.out.print("Enter score in exam: ");
			int exam_score = getData.nextInt();
			System.out.print("Enter score in recitation: ");
			int recitation_score = getData.nextInt();
			System.out.print("Enter score in Project: ");
			int projet_score = getData.nextInt();
			getData.nextLine();
		}
}
